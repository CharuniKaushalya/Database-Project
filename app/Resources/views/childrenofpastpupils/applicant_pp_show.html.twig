{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row" style="height:20px;"> 
    </div>
    <div class="row"> 
        <div class="col-md-1"> 
        </div>
        <div class="col-md-10"> 
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Child Details</h3>
                    <a class="btn btn-info pull-right"  href="{{ path('childrenofpastpupils_new', { 'id': id }) }}">Add a Children of past pupils</a>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <table class="mytable table">
                    <thead>
                        <tr>
                            <th>Name in full</th>
                            <th>Name in initial</th>
                            <th>From year</th>
                            <th>To year</th>
                            <th>From grade</th>
                            <th>To grade</th>        
                            <th>Id</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for childrenOfPastPupil in childrenOfPastPupils %}
                        <tr>
                            <td><a href="{{ path('childrenofpastpupils_show', { 'id': childrenOfPastPupil.id }) }}">{{ childrenOfPastPupil.name_in_full }}</td>
                            <td>{{ childrenOfPastPupil.name_in_initial }}</td>
                            <td>{% if childrenOfPastPupil.from_year %}{{ childrenOfPastPupil.from_year|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if childrenOfPastPupil.to_year %}{{ childrenOfPastPupil.to_year|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ childrenOfPastPupil.from_grade }}</td>
                            <td>{{ childrenOfPastPupil.to_grade }}</td>
                            <td>{{ childrenOfPastPupil.id }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                    </div><!-- /.box-body -->
                <div class="box-footer">
                <a class="btn btn-info pull-right"  value="Delete" href="{{ path('childernofstudyingatpresent_new', { 'id': id }) }}">Continue</a>
                </div><!-- /.box-footer -->
              </div>
            </div>
        </div>
    </div>

    
{% endblock %}
