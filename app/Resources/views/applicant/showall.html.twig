{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <div class="row" style="height:20px;"> 
    </div>
    <div class="row"> 
        <div class="col-md-1"> 
        </div>
        <div class="col-md-10"> 
            <div class="box box-info">
                <div class="box-header with-border">
                     <h3 class="box-title">Applicant ID : {{ applicant.id }}</h3>
                     <button  class="btn btn-info pull-right"><a href="{{ path('applicant_index') }}">Back to the list</a></button>
                </div><!-- /.box-header -->
                <div class="box-body">

                <table class="col-md-8 table-hover record_properties">
                

                <tbody>
                        <tr class="info">
                            <th>Applicant Deatails</th>
                        </tr>
                        <tr>
                            <th>Name in full</th>
                            <td>{{ applicant.nameInFull }}</td>
                        </tr>
                        <tr>
                            <th>Name in initials</th>
                            <td>{{ applicant.nameInInitials }}</td>
                        </tr>
                        <tr>
                            <th>Permanent address</th>
                            <td>{{ applicant.permanentAddress }}</td>
                        </tr>
                        <tr>
                            <th>Gramaniladari divion</th>
                            <td>{{ applicant.gramaNiladariDivion }}</td>
                        </tr>
                        <tr>
                            <th>Divsional scretary area</th>
                            <td>{{ applicant.divsionalScretaryArea }}</td>
                        </tr>
                        <tr>
                            <th>District</th>
                            <td>{{ applicant.district }}</td>
                        </tr>
                        <tr>
                            <th>Date of birth</th>
                            <td>{% if applicant.dob %}{{ applicant.dob|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>NIC</th>
                            <td>{{ applicant.nic }}</td>
                        </tr>
                        <tr>
                            <th>Wether srilankan</th>
                            <td>{% if applicant.wetherSrilankan %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>No years in electoral register</th>
                            <td>{{ applicant.noYearsInElectoralRegister }}</td>
                        </tr>
                        <tr>
                            <th>No schools located closer</th>
                            <td>{{ applicant.noSchoolsLocatedCloser }}</td>
                        </tr>
                        
                    </tbody>
                    </table>
                    <table>
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name in full</th>
                                <th>Name in intials</th>
                                <th></th>
                            </tr>
                        </thead>
                        {% for child in childs %}

                    <tbody>
                        <tr class="info">
                            <th>Child Deatails : {{ child.id }}</th>
                            <td>{{ child.name_in_full }}</td>
                            <td>{{ child.name_in_intials }}</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Name in intials</th>
                            <td>{{ child.name_in_intials }}</td>
                        </tr>
                        <tr>
                            <th>Sex</th>
                            <td>{{ child.sex }}</td>
                        </tr>
                        <tr>
                            <th>Religion</th>
                            <td>{{ child.religion }}</td>
                        </tr>
                        <tr>
                            <th>Medium of learning</th>
                            <td>{{ child.medium_of_learning }}</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>{% if child.dob %}{{ child.dob|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        
                    </tbody>
                    {% endfor %}
                    </table>

                </table>


                    <tbody>
                                <tr class="info">
                                    <th>Children of Staff  Deatails : {{ childrenOfStaff.id }}</th>
                                </tr>
                                <tr>
                                    <th>Empid</th>
                                    <td>{{ childrenOfStaff.emp_id }}</td>
                                </tr>
                                <tr>
                                    <th>Periodofservice</th>
                                    <td>{{ childrenOfStaff.period_of_service }}</td>
                                </tr>
                                <tr>
                                    <th>Periodofdifficultschoolservice</th>
                                    <td>{{ childrenOfStaff.period_of_difficult_school_service }}</td>
                                </tr>
                                <tr>
                                    <th>Difffromyear</th>
                                    <td>{% if childrenOfStaff.diff_from_year %}{{ childrenOfStaff.diff_from_year|date('Y-m-d') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Difftoyear</th>
                                    <td>{% if childrenOfStaff.diff_to_year %}{{ childrenOfStaff.diff_to_year|date('Y-m-d') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Unutilizedleave</th>
                                    <td>{% if childrenOfStaff.un_utilized_leave %}{{ childrenOfStaff.un_utilized_leave|date('Y-m-d') }}{% endif %}</td>
                                </tr>
                            </tbody>

                    <tbody>

                        <tr class="info">
                            <th>Children of officers transferred on exigencies of service Deatails : {{ childrenOfOtoeo.id }}</th>
                        </tr>
                        <tr>
                            <th>Last transfer received</th>
                            <td>{% if childrenOfOtoeo.last_transfer_received %}{{ childrenOfOtoeo.last_transfer_received|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Before address work place</th>
                            <td>{{ childrenOfOtoeo.before_address_wrk_place }}</td>
                        </tr>
                        <tr>
                            <th>After address work place</th>
                            <td>{{ childrenOfOtoeo.after_address_wrk_place }}</td>
                        </tr>
                        <tr>
                            <th>Distance</th>
                            <td>{{ childrenOfOtoeo.distance }}</td>
                        </tr>
                        <tr>
                            <th>No schools addmitted</th>
                            <td>{{ childrenOfOtoeo.no_scl_addmitted }}</td>
                        </tr>
                        
                    </tbody>
                    
                    <tbody>
                            <tr class="info">
                                <th>Children of studying at present Deatails : {{ childernOfStudyingAtPresent.id }}</th>
                            </tr>

                            <tr>
                                <th>Name In Full</th>
                                <td>{{ childernOfStudyingAtPresent.name_in_full }}</td>
                            </tr>
                            <tr>
                                <th>Name In Initial</th>
                                <td>{{ childernOfStudyingAtPresent.name_in_initial }}</td>
                            </tr>
                            <tr>
                                <th>Grade</th>
                                <td>{{ childernOfStudyingAtPresent.grade }}</td>
                            </tr>
                            <tr>
                                <th>Addmission No</th>
                                <td>{{ childernOfStudyingAtPresent.addmission_no }}</td>
                            </tr>
                            <tr>
                                <th>Addmission Grade</th>
                                <td>{{ childernOfStudyingAtPresent.addmission_grade }}</td>
                            </tr>
                            <tr>
                                <th>Grades Spent</th>
                                <td>{{ childernOfStudyingAtPresent.grades_spent }}</td>
                            </tr>
                            
                            <tr>
                                <th>School Name</th>
                                <td>{{ childernOfStudyingAtPresent.school_id }}</td>
                            </tr>
                        </tbody>

                    <tbody>
                        <tr class="info">
                                <th>Children of studying at present Deatails :{{ childrenOfPastPupil.id }}</th>
                            </tr>
                        <tr>
                            <th>Name In full</th>
                            <td>{{ childrenOfPastPupil.name_in_full }}</td>
                        </tr>
                        <tr>
                            <th>Name In Initial</th>
                            <td>{{ childrenOfPastPupil.name_in_initial }}</td>
                        </tr>
                        <tr>
                            <th>From Year</th>
                            <td>{% if childrenOfPastPupil.from_year %}{{ childrenOfPastPupil.from_year|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>To Year</th>
                            <td>{% if childrenOfPastPupil.to_year %}{{ childrenOfPastPupil.to_year|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>From Grade</th>
                            <td>{{ childrenOfPastPupil.from_grade }}</td>
                        </tr>
                        <tr>
                            <th>To Grade</th>
                            <td>{{ childrenOfPastPupil.to_grade }}</td>
                        </tr>
                        
                        
                        
                    </tbody>
                </table>
                </div><!-- /.box-body -->
                    
            </div>
            </div>
        </div>
    </div> 
{% endblock %}
