{% extends 'base.html.twig' %}

{% block body %}
    <h1></h1>
    <div class="container-fluid">
    <div class="row" style="height:20px;"> 
    </div>
    <div class="row"> 
        <div class="col-md-1"> 
        </div>
        <div class="col-md-10"> 
    <div class="box box-info">
        <div class="box-header with-border">
             <h3 class="box-title">Role List</h3>
             <a type="submit" class="btn btn-info pull-right" href="{{ path('role_new') }}">Create a new entry</a>
        </div><!-- /.box-header -->
         <!-- form start -->
        <form class="form-horizontal">
        <div class="box-body" id="ex6">
            <div class="form-group">
                    <div class="col-sm-4">
                        <fieldset class="controls">
                             <input id="search-filtering" class="form-control" placeholder="Type here to filter" type="text">
                        </fieldset>
                    </div>
            </div>
            <table class="mytable table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Role</th>
                        <th>Description</th>
                        <th>View Previlges</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for role in roles %}
                    <tr class="instafilta-target">
                        <td>{{ role['id'] }}</td>
                        <td>{{ role['role'] }}</td>
                        <td>{{ role['description'] }}</td>
                        <td><a href="{{ path('role_previlege', { 'id': role['id'] }) }}">View Previlges</a></td>
                        
                        <td>
                            <ul class="showedit">
                                <li>
                                    <a href="{{ path('role_show', { 'id': role['id'] }) }}"><i class="fa fa-clipboard">show</i></a>
                                </li>
                                <li>
                                    <a href="{{ path('role_edit', { 'id': role['id'] }) }}"><i class="fa fa-pencil-square-o">edit</i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div><!-- /.box-body -->
        <div class="box-footer">
        </div><!-- /.box-footer -->
        </form>
    </div>
    </div>
    </div>
    </div>

    <script src="{{asset('public/js/jquery.min.js')}}"></script>
    <script src="{{asset('public/js/instafilta.min.js')}}"></script>
    <script>
    $('#search-filtering').instaFilta({
        scope: '#ex6'
    });
    </script>
{% endblock %}
