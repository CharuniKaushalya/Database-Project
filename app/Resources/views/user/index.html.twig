{% extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid">
    <div class="row" style="height:20px;"> 
    </div>
    <div class="row"> 
        <div class="col-md-1"> 
        </div>
        <div class="col-md-10"> 
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">User Details</h3>
                     <a href="{{ path('user_new') }}" class="btn btn-info pull-right">Create a new entry</a>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table class="mytable table"> 
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name in full</th>
                                <th>Name in intials</th>
                                <th>User name</th>
                                <th>Emp no</th>
                                <th>Password</th>
                                <th>Sex</th>
                                <th>Date of Birth</th>
                                <th>Nic</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.nameInFull }}</a></td>
                                <td>{{ user.nameInIntials }}</td>
                                <td>{{ user.userName }}</td>
                                <td>{{ user.empNo }}</td>
                                <td>{{ user.password }}</td>
                                <td>{{ user.sex }}</td>
                                <td>{% if user.dob %}{{ user.dob|date('Y-m-d') }}{% endif %}</td>
                                <td>{{ user.nic }}</td>
                                <td>
                                    <ul class="showedit">
                                        <li>
                                            <a href="{{ path('user_show', { 'id': user.id }) }}"><i class="fa fa-clipboard">show</i></a>
                                        </li>
                                        <li>
                                            <a href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-pencil-square-o">edit</i></a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer">
                </div><!-- /.box-footer -->
              </div>
            </div>
        </div>
    </div>
  

{% endblock %}
